<?xml version="1.0"?>
<robot name="my robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find simulation)/models/robot/myrobot.gazebo" />
   
   
    <link name = 'chassisLink'>
        <pose> 0 0 0 0 0 0 </pose>
       <inertial> 
          <mass value = "3"/>
          <inertia ixx="0.010625" ixy="0" ixz="0" iyy="0.040625" iyz="0" izz="0.130625"/>
        </inertial>

        <collision name ='collisionChassis'>
            <origin rpy="0 0 0" xyz ="0 0 0"/>
            <geometry>
                <box size ="0.35 0.2 0.05"/>
            </geometry>
        </collision>
        <visual name='baseLinkVisual'>
            <origin rpy="0 0 0" xyz ="0 0 0"/>    
                <geometry>
                    <box size ="0.35 0.2 0.05"/>
                </geometry>
            <material name="orange"/>
        </visual>
    </link>

    <link name="casterLink">
    <inertial>
        <mass value="0.1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx="0.000395416666667" ixy="0" ixz="0" iyy="0.106208333" iyz="0" izz="0.106208333"/>
    </inertial>
        <collision name ='collisionCaster'>
            <origin rpy="0 0 0" xyz="0.3 0 0.025"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>0</mu>
                        <mu2>0</mu2>
                        <slip1>1.0</slip1>
                        <slip2>1.0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0.3 0 0.025"/> 
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </visual>
    </link>

    <joint name="jointCaster" type="fixed">
        <origin rpy="0 0 0" xyz="-0.2 0 -0.05"/>
        <child link="casterLink"/>
        <parent link="chassisLink"/>
    </joint>

    <link name="leftWheelLink">
        <collision name="collisionLeftWheel">
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>1.0</mu>
                        <mu2>1.0</mu2>
                        <slip1>0.0</slip1>
                        <slip2>0.0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
             <mass value="0.2"/>
             <inertia ixx="0.000361667" ixy="0" ixz="0" iyy="0.000361667" iyz="0" izz="0.00025"/>
        </inertial>
    </link>

    <joint name="jointLeftWheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.08 0.125 0"/>
        <child link="leftWheelLink"/>
        <parent link="chassisLink"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="50" velocity="50"/>
        <joint_properties damping="0" friction="0"/>
    </joint>


    <link name="rightWheelLink">
        <collision name="collisionRightWheel">
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>1.0</mu>
                        <mu2>1.0</mu2>
                        <slip1>0.0</slip1>
                        <slip2>0.0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
             <mass value="0.2"/>
             <inertia ixx="0.000361667" ixy="0" ixz="0" iyy="0.000361667" iyz="0" izz="0.00025"/>
        </inertial>
    </link>

    <joint name="jointRightWheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.08 -0.125 0"/>
        <child link="rightWheelLink"/>
        <parent link="chassisLink"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="50" velocity="50"/>
        <joint_properties damping="0" friction="0"/>
    </joint>

</robot>